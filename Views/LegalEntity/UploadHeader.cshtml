
<div id="gedit" style="width:100%; margin-left:auto; margin-right:auto; padding-top: 10px;">
	
	<form id="headerForm">
				
		<input type="hidden" id="legalEntity" name="legalEntity" value="@ViewBag.LegalEntity" />

		<div style="margin-bottom:10px;">
			@Html.Label("lCERT", "Unesite zaglavlje računa", new { style = "font-size:12px;" })
			@Html.Kendo().TextArea().Name("header").HtmlAttributes(new { style = "width:100%; height:200px; font-size:12px!important;" }).Value(ViewBag.Header ?? "")
		</div>

		<div style="display: flex; flex-direction: column; align-items: center; margin-top:30px;">
			@(Html.Kendo().Button().Name("btnSetHeader")
				.HtmlAttributes(new { type = "button", onclick = "setHeader()", style = "height:95px; width:95px; margin-right:10px; cursor:pointer;" })
				.Content(@"<div style='width:100%;height:100%;text-align:center; align-items:center;'>
							<img style='width:50px;height:50px;text-align:center;display:block;margin-left:auto;margin-right:auto;' src='/Content/Icons/receipt.png'/>
							<div style='font-weight:bold;display:block;position:relative;top:5px;line-height:110%;font-size:90%'>SAČUVAJ<br/>ZAGLAVLJE<div>
						</div>"))
		</div>
	</form>
	
</div>