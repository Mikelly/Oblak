
<script type="text/javascript">
	function setCred(e) {
		//e.preventDefault();
		$.ajax({
			url: '/srb-cred',
			type: 'POST',
			data: $('#frmSrbCred').serialize(),
			success: function (data) {
				$('#wndSrbCred').data('kendoWindow').close();
			},
			error: function () {

			}
		});
	}
</script>



<form id="frmSrbCred">
	<div>
		<input type="hidden" id="legalEntity" name="legalEntity" value="@ViewBag.LegalEntity" />

		<div style="margin-bottom:20px; margin-top:10px">
			<label for="username">Korisničko ime</label>
			@Html.Kendo().TextBox().Name("txtSrbUsername").HtmlAttributes(new { name = "username", style = "width:100%" }).Value(ViewBag.UserName)
		</div>

		<div style="margin-bottom:60px;">
			<label for="password">Lozinka</label>
			@Html.Kendo().TextBox().Name("txtSrbPassword").HtmlAttributes(new { name = "password", style = "width:100%" }).Value(ViewBag.Password)
		</div>

		<div style="width:100%; margin-top:20px; display:flex; justify-content:center; justify-items:center;">
			@(Html.Kendo().Button().Name("btnLogoUpload")
				.HtmlAttributes(new { type = "button", onclick = "uploadLogo()", style = "height:95px; width:95px; margin-right:10px; cursor:pointer;" })
				.Content(@"<div style='width:100%;height:100%;text-align:center; align-items:center;'>
					<img style='width:50px;height:50px;text-align:center;display:block;margin-left:auto;margin-right:auto;' src='/Content/Icons/logo.png'/>
					<div style='font-weight:bold;display:block;position:relative;top:5px;line-height:110%;font-size:90%'>SAČUVAJ<br/>LOGO<div>
					</div>"))
		</div>

		<div style="display: flex; flex-direction: column; align-items: center;">
			@(Html.Kendo().Button().Name("btnSetCred")
				.Content("<div style='display:flex;align-items:center; justify-content:space-between;'><img style='width:35px;height:35px;text-align:center; position:relative; top:0px;' src='/Content/Icons/key-security.png'></img><div style='padding-left:10px; padding-right:10px; font-size:smaller; font-weight:bold;'>Podesi kredencijale</div></div>")
				.HtmlAttributes(new { onclick = "setCred()", type = "button", style = "width:200px; height:50px;" })
				)
		</div>
		
	</div>
</form>

