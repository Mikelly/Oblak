@model int?

@(Html.Kendo().IntegerTextBoxFor(m => m)
      .HtmlAttributes(new { style = "width:100%; font-family: 'Roboto Mono'; font-size: 11px;", onfocus = "var input = $(this); setTimeout(function() { input.select(); });" })
      .Min(int.MinValue)
      .Max(int.MaxValue)
      .Format("#"))
)