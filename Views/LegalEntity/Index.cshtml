@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.Kendo().Grid<LegalEntity>()
    .Name("grid")
    .Columns(columns =>
    {        
        columns.Bound(p => p.Id).Filterable(false).Width(100);
        columns.Bound(p => p.Name).Width(100);
        columns.Bound(p => p.UserCreatedDate).Format("{0:MM/dd/yyyy}").Width(140);
        columns.Bound(p => p.Country);
        columns.Bound(p => p.TIN).Width(150);
    })
    
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .HtmlAttributes(new { style = "height:430px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("Read", "LegalEntity"))
     )
)