@{
    ViewBag.Title = "Pošta export";
    Layout = "~/Views/Shared/_LayoutINV.cshtml";
}

<script type="text/javascript">
    function exportpost() {
        var datum = kendo.toString($('#Datum').data('kendoDatePicker').value(), 'dd.MM.yyyy');
        window.location = `/post-office-export?datum=${datum}`;
    };

    function reportpost() {
        var datum = kendo.toString($('#Datum').data('kendoDatePicker').value(), 'dd.MM.yyyy');
        window.open(`/post-office-report?datum=${datum}`, `_blank`);
    };

</script>

<div style="display:flex; flex-wrap:wrap; justify-content:center; justify-items:center; margin-top:40px; font-size:large;">
    
    <div style="width:200px; text-align:center; font-weight:bold;">
        @ViewBag.TaxDesc
    </div>

    <div style="flex-basis:100%; height:40px;"></div>

    <div style="width:200px;">
        Izaberite datum:
        @Html.Kendo().DatePicker().Name("Datum").Value(DateTime.Now)
    </div>

    <div style="flex-basis:100%; height:40px;"></div>

    <div style="width:100px;">
        @(Html.Kendo().Button().Name("btnExport")
            .HtmlAttributes(new { type = "button", onclick = "exportpost()", style = "height:95px; width:95px; margin-right:10px;" })
            .Content(@"<div style='width:100%;height:100%;text-align:center; align-items:center; flex-grow:0; flex-shrink:0; cursor:pointer;'>
                <img style='width:50px;height:50px;text-align:center;display:block;margin-left:auto;margin-right:auto;' src='/Content/Icons/postal.png'/>
                <div style='font-weight:bold;display:block;position:relative;top:6px;line-height:110%;font-size:90%'>EXPORT<br/>POŠTI<div>
                </div>"))
    </div>

    <div style="width:100px;">
        @(Html.Kendo().Button().Name("btnReport")
            .HtmlAttributes(new { type = "button", onclick = "reportpost()", style = "height:95px; width:95px; margin-right:10px;margin-left:5px;" })
            .Content(@"<div style='width:100%;height:100%;text-align:center; align-items:center; flex-grow:0; flex-shrink:0; cursor:pointer;'>
        <img style='width:50px;height:50px;text-align:center;display:block;margin-left:auto;margin-right:auto;' src='/Content/Icons/print_invoice_color.png'/>
        <div style='font-weight:bold;display:block;position:relative;top:6px;line-height:110%;font-size:90%'>IZVJEŠTAJ<br/>POŠTI<div>
        </div>"))
    </div>
</div>