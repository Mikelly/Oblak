@model int?

@(Html.Kendo().DropDownListFor(model => model)
    .HtmlAttributes(new { style = "width:100%" })
    .OptionLabel("Izaberite opštinu...")
    .BindTo(ViewBag.Opstine as SelectList)
    .DataTextField("Text")
    .DataValueField("Value")    
    .Value(Model.ToString())
    .ValuePrimitive(true)
    .Events(e => e.Change("opstinaChanged"))
)